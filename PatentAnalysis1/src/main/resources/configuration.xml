<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE configuration  
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-config.dtd">  
<configuration>  
 <typeAliases>  
  <!--给实体类起一个别名 user -->  
  <typeAlias type="edu.zju.cst.beans.Patent" alias="Patent" />
  <typeAlias type="edu.zju.cst.beans.DateDim" alias="DateDim" />
  <typeAlias type="edu.zju.cst.beans.CompanyDim" alias="CompanyDim" />
    
 </typeAliases>  
 <!--数据源配置 使用mysql数据库 -->  
 <environments default="development">  
  <environment id="development">  
   <transactionManager type="jdbc" />  
   <dataSource type="POOLED">  
    <property name="driver" value="com.mysql.jdbc.Driver" />  
    <property name="url" value="jdbc:mysql://10.82.80.99:3306/dataview"/>  
    <property name="username" value="root" />  
    <property name="password" value="123456" />  
   </dataSource>  
  </environment>  
 </environments>  
 <mappers>  
  <!--userMapper.xml装载进来 同等于把“dao”的实现装载进来 -->  
  <mapper resource="/edu/zju/cst/mapper/PatentMapper.xml"/>  
 </mappers>  
</configuration>  